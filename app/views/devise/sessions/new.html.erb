<div class="login-form">
  <h2 class="login-form-title">ログイン</h2>
  <div class="login-flash-message">
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <%= form_with model: @user, url: user_session_path, id: "new_user", class: "new_user", local: true do |f| %>
    
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br />
      <p>※テスト用email：kinoshita@gmail.com※</p>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password" %><br />
      <p>※テスト用password：kino1116※</p>
      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>


    <div class="actions">
      <%= f.submit "ログイン" %><br />
      <div class="root-to-index">
        <%= link_to "トップページへ戻る", root_path, class: "btn" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

